<!-- Services Hero -->
<section class="bg-gray-900 text-white py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-6">Our Professional Services</h1>
    <p class="text-xl text-gray-300 max-w-3xl mx-auto">
      We provide comprehensive digital solutions to help your business thrive in today's competitive market.
    </p>
  </div>
</section>

<!-- SEO Services -->
<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        SEO & Digital Marketing
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Boost your online presence and drive organic traffic with our proven SEO strategies.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @seo_services.each do |service| %>
        <div class="bg-gray-50 p-6 rounded-lg">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <%= render 'shared/icons/search', class: "w-6 h-6 text-green-600" %>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= service[:title] %></h3>
          <p class="text-gray-600 mb-4"><%= service[:description] %></p>
          <ul class="space-y-2">
            <% service[:features].each do |feature| %>
              <li class="flex items-center text-sm text-gray-600">
                <div class="w-4 h-4 bg-green-100 rounded-full flex items-center justify-center mr-2">
                  <div class="w-2 h-2 bg-green-600 rounded-full"></div>
                </div>
                <%= feature %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Software Development Services -->
