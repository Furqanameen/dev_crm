<!-- Technologies Section -->
<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Technologies We Master
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        We use cutting-edge technologies to build robust, scalable, and future-proof solutions.
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8">
      <% technologies = ['Ruby on Rails', 'React', 'Node.js', 'Python', 'PostgreSQL', 'AWS'] %>
      <% technologies.each do |tech| %>
        <div class="bg-white p-4 rounded-lg text-center shadow-sm">
          <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center mx-auto mb-2">
            <%= render 'shared/icons/building', class: "w-6 h-6 text-gray-600" %>
          </div>
          <p class="text-sm font-medium text-gray-900"><%= tech %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>

