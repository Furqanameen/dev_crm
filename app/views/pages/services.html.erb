                  <div class="w-2 h-2 bg-primary-600 rounded-full"></div>
                </div>
                <%= feature %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Process Section -->
