<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Admin - DevCRM</title>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- Modern Admin Sidebar -->
    <div class="admin-sidebar bg-blue-900 text-white">
      <div class="p-6">
        <div class="flex items-center mb-8">
          <div class="bg-blue-700 p-2 rounded-lg mr-3">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
            </svg>
          </div>
          <h2 class="text-xl font-bold">DevCRM Admin</h2>
        </div>
        
        <nav>
          <ul class="space-y-1">
            <li>
              <%= link_to admin_root_path, class: "admin-nav-link flex items-center px-4 py-3 text-sm rounded-lg transition-colors #{current_page?(admin_root_path) ? 'active bg-blue-800 font-medium' : 'hover:bg-blue-800'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
                </svg>
                Dashboard
              <% end %>
            </li>
            
            <li class="mt-6">
              <div class="px-4 py-2 text-xs font-semibold text-blue-300 uppercase tracking-wide">Campaigns</div>
            </li>
            <li>
              <%= link_to admin_providers_path, class: "admin-nav-link flex items-center px-4 py-3 text-sm rounded-lg transition-colors #{current_page?(admin_providers_path) || controller_name == 'providers' ? 'active bg-blue-800 font-medium' : 'hover:bg-blue-800'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"/>
                </svg>
                Providers
              <% end %>
            </li>
            <li>
              <%= link_to admin_templates_path, class: "admin-nav-link flex items-center px-4 py-3 text-sm rounded-lg transition-colors #{current_page?(admin_templates_path) || controller_name == 'templates' ? 'active bg-blue-800 font-medium' : 'hover:bg-blue-800'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Templates
              <% end %>
            </li>
            <li>
              <%= link_to admin_schedules_path, class: "admin-nav-link flex items-center px-4 py-3 text-sm rounded-lg transition-colors #{current_page?(admin_schedules_path) || controller_name == 'schedules' ? 'active bg-blue-800 font-medium' : 'hover:bg-blue-800'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2-2v16a2 2 0 002 2z"/>
                </svg>
                Schedules
              <% end %>
            </li>
            
            <li class="mt-6">
              <div class="px-4 py-2 text-xs font-semibold text-blue-300 uppercase tracking-wide">Data Management</div>
            </li>
            <li>
              <%= link_to admin_contacts_path, class: "admin-nav-link flex items-center px-4 py-3 text-sm rounded-lg transition-colors #{current_page?(admin_contacts_path) || controller_name == 'contacts' ? 'active bg-blue-800 font-medium' : 'hover:bg-blue-800'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                Contacts
              <% end %>
            </li>
            <li>
              <%= link_to admin_lists_path, class: "admin-nav-link flex items-center px-4 py-3 text-sm rounded-lg transition-colors #{current_page?(admin_lists_path) || controller_name == 'lists' ? 'active bg-blue-800 font-medium' : 'hover:bg-blue-800'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
                Lists
              <% end %>
            </li>
            <li>
              <%= link_to admin_imports_path, class: "admin-nav-link flex items-center px-4 py-3 text-sm rounded-lg transition-colors #{current_page?(admin_imports_path) || controller_name == 'imports' ? 'active bg-blue-800 font-medium' : 'hover:bg-blue-800'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                </svg>
                Imports
              <% end %>
            </li>
            
            <li class="mt-6">
              <div class="px-4 py-2 text-xs font-semibold text-blue-300 uppercase tracking-wide">Logs & Events</div>
            </li>
            <li>
              <%= link_to admin_messages_path, class: "admin-nav-link flex items-center px-4 py-3 text-sm rounded-lg transition-colors #{current_page?(admin_messages_path) || controller_name == 'messages' ? 'active bg-blue-800 font-medium' : 'hover:bg-blue-800'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
                Messages
              <% end %>
            </li>
            <li>
              <%= link_to admin_message_events_path, class: "admin-nav-link flex items-center px-4 py-3 text-sm rounded-lg transition-colors #{current_page?(admin_message_events_path) || controller_name == 'message_events' ? 'active bg-blue-800 font-medium' : 'hover:bg-blue-800'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
                Webhooks
              <% end %>
            </li>

            <% if current_user.role == 'super_admin' %>
              <li class="mt-6">
                <div class="px-4 py-2 text-xs font-semibold text-blue-300 uppercase tracking-wide">Administration</div>
              </li>
              <li>
                <%= link_to admin_users_path, class: "admin-nav-link flex items-center px-4 py-3 text-sm rounded-lg transition-colors #{current_page?(admin_users_path) || controller_name == 'users' ? 'active bg-blue-800 font-medium' : 'hover:bg-blue-800'}" do %>
                  <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                  </svg>
                  Users
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>

    <!-- Main Content -->
    <div class="admin-main-content">
      <!-- Top Header -->
      <header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-30">
        <div class="px-6 py-4">
          <div class="flex items-center justify-between">
            <div>
              <div class="flex items-center">
                <div class="mr-4">
                  <%= link_to admin_root_path, class: "text-blue-600 hover:text-blue-800" do %>
                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
                    </svg>
                  <% end %>
                </div>
                <div>
                  <h1 class="text-lg font-semibold text-gray-900">DevCRM Admin</h1>
                  <p class="text-sm text-gray-500">Campaign Management System</p>
                </div>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <div class="flex items-center gap-3">
                <span class="text-sm text-gray-700">
                  Welcome, <span class="font-medium">Superadmin</span>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 ml-2">
                    SUPER ADMIN
                  </span>
                </span>
                <%= link_to root_path, class: "text-sm text-gray-600 hover:text-gray-800 transition-colors", target: "_blank" do %>
                  View Site
                <% end %>
                <%= link_to "Sign Out", destroy_user_session_path, data: { method: "delete", confirm: "Are you sure?" }, class: "text-sm text-gray-600 hover:text-gray-800 transition-colors" %>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Content Area -->
      <main class="p-6 min-h-screen bg-gray-50">
        <div class="w-full max-w-none">
          <!-- Flash Messages -->
          <% if notice %>
            <div class="mb-6">
              <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <p class="text-sm text-green-700 font-medium"><%= notice %></p>
                </div>
              </div>
            </div>
          <% end %>

          <% if alert %>
            <div class="mb-6">
              <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-red-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                  </svg>
                  <p class="text-sm text-red-700 font-medium"><%= alert %></p>
                </div>
              </div>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
