<% content_for :head do %>
  <meta name="description" content="User Dashboard - DevCRM">
<% end %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Dashboard</h1>
      <p class="text-gray-600">Welcome back, <%= @user.display_name %>!</p>
    </div>

    <!-- Welcome Card -->
    <div class="card mb-8">
      <div class="card-body text-center">
        <div class="icon icon-user icon-3xl text-primary-600 mx-auto mb-4"></div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Welcome to DevCRM</h2>
        <p class="text-gray-600 mb-4">Your account is active and ready to use.</p>
        <div class="flex justify-center space-x-4">
          <%= link_to "Update Profile", edit_user_registration_path, class: "btn btn-primary" %>
          <%= link_to "Browse Services", services_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>

    <!-- Account Information -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="card">
        <div class="card-header">
          <h3 class="text-lg font-semibold">Account Information</h3>
        </div>
        <div class="card-body">
          <div class="space-y-3">
            <div>
              <label class="text-sm font-medium text-gray-700">Email</label>
              <p class="text-gray-900"><%= @user.email %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-700">Account Type</label>
              <p class="text-gray-900 capitalize"><%= @user.role.humanize %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-700">Member Since</label>
              <p class="text-gray-900"><%= @user.created_at.strftime("%B %d, %Y") %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h3 class="text-lg font-semibold">Quick Actions</h3>
        </div>
        <div class="card-body">
          <div class="space-y-3">
            <%= link_to edit_user_registration_path, class: "flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
              <div class="icon icon-edit text-gray-600 mr-3"></div>
              <div>
                <p class="font-medium text-gray-900">Edit Profile</p>
                <p class="text-sm text-gray-600">Update your account information</p>
              </div>
            <% end %>
            
            <%= link_to services_path, class: "flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
              <div class="icon icon-building text-gray-600 mr-3"></div>
              <div>
                <p class="font-medium text-gray-900">Our Services</p>
                <p class="text-sm text-gray-600">Explore our CRM and development services</p>
              </div>
            <% end %>
            
            <%= link_to contact_path, class: "flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
              <div class="icon icon-envelope text-gray-600 mr-3"></div>
              <div>
                <p class="font-medium text-gray-900">Contact Support</p>
                <p class="text-sm text-gray-600">Get help with your account</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
