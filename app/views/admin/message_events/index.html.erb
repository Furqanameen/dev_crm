<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Webhook Events</h1>
  <p class="text-gray-600 mt-2">Monitor real-time webhook events and message delivery tracking.</p>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4 mb-6">
  <div class="bg-white rounded-lg shadow p-4">
    <div class="flex items-center">
      <div class="p-2 bg-gray-100 rounded-lg mr-3">
        <div class="icon icon-activity w-5 h-5 text-gray-600"></div>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-600">Total Events</p>
        <p class="text-xl font-bold text-gray-900"><%= @stats[:total] %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-4">
    <div class="flex items-center">
      <div class="p-2 bg-green-100 rounded-lg mr-3">
        <div class="icon icon-check w-5 h-5 text-green-600"></div>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-600">Delivered</p>
        <p class="text-xl font-bold text-green-600"><%= @stats[:delivered] %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-4">
    <div class="flex items-center">
      <div class="p-2 bg-blue-100 rounded-lg mr-3">
        <div class="icon icon-eye w-5 h-5 text-blue-600"></div>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-600">Opened</p>
        <p class="text-xl font-bold text-blue-600"><%= @stats[:opened] %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-4">
    <div class="flex items-center">
      <div class="p-2 bg-purple-100 rounded-lg mr-3">
        <div class="icon icon-mouse-pointer w-5 h-5 text-purple-600"></div>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-600">Clicked</p>
        <p class="text-xl font-bold text-purple-600"><%= @stats[:clicked] %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-4">
    <div class="flex items-center">
      <div class="p-2 bg-red-100 rounded-lg mr-3">
        <div class="icon icon-x w-5 h-5 text-red-600"></div>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-600">Failed/Bounced</p>
        <p class="text-xl font-bold text-red-600"><%= @stats[:failed] + @stats[:bounced] %></p>
      </div>
    </div>
  </div>
</div>

<!-- Filters -->
<div class="bg-white rounded-lg shadow mb-6 p-4">
  <%= form_with url: admin_message_events_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
    <div>
      <%= form.label :event_type, class: "label" %>
      <%= form.select :event_type, options_for_select([["All Events", ""]] + @event_types.map { |t| [t.humanize, t] }, params[:event_type]), {}, { class: "form-select" } %>
    </div>
    
    <div>
      <%= form.label :from_date, "From Date", class: "label" %>
      <%= form.date_field :from_date, value: params[:from_date], class: "form-input" %>
    </div>
    
    <div>
      <%= form.label :to_date, "To Date", class: "label" %>
      <%= form.date_field :to_date, value: params[:to_date], class: "form-input" %>
    </div>
    
    <div>
      <%= form.submit "Filter", class: "btn btn-secondary" %>
      <%= link_to "Clear", admin_message_events_path, class: "btn btn-ghost" %>
    </div>
  <% end %>
</div>

<!-- Events Table -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <% if @events.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Message</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Recipient</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Schedule</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Occurred At</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @events.each do |event| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="p-1.5 rounded-full <%= 
                      case event.event_type
                      when 'delivered' then 'bg-green-100'
                      when 'opened' then 'bg-blue-100'
                      when 'clicked' then 'bg-purple-100'
                      when 'bounced' then 'bg-orange-100'
                      when 'failed' then 'bg-red-100'
                      else 'bg-gray-100'
                      end %>">
                      <% case event.event_type %>
                      <% when 'delivered' %>
                        <div class="icon icon-check w-4 h-4 text-green-600"></div>
                      <% when 'opened' %>
                        <div class="icon icon-eye w-4 h-4 text-blue-600"></div>
                      <% when 'clicked' %>
                        <div class="icon icon-mouse-pointer w-4 h-4 text-purple-600"></div>
                      <% when 'bounced' %>
                        <div class="icon icon-alert-triangle w-4 h-4 text-orange-600"></div>
                      <% when 'failed' %>
                        <div class="icon icon-x w-4 h-4 text-red-600"></div>
                      <% else %>
                        <div class="icon icon-activity w-4 h-4 text-gray-600"></div>
                      <% end %>
                    </div>
                  </div>
                  <div class="ml-3">
                    <div class="text-sm font-medium text-gray-900">
                      <%= event.event_type.humanize %>
                    </div>
                    <% if event.event_data.present? && event.event_data['url'] %>
                      <div class="text-xs text-gray-500 truncate max-w-xs">
                        <%= event.event_data['url'] %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= link_to "Message ##{event.message.id}", admin_message_path(event.message), class: "text-primary-600 hover:text-primary-700" %>
                </div>
                <div class="text-sm text-gray-500">
                  <%= event.message.channel.humanize %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= event.message.contact.full_name %>
                </div>
                <div class="text-sm text-gray-500">
                  <%= event.message.contact.email %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= link_to event.message.schedule.name, admin_schedule_path(event.message.schedule), class: "text-primary-600 hover:text-primary-700" %>
                </div>
                <div class="text-sm text-gray-500">
                  <%= event.message.schedule.template.name %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= event.occurred_at.strftime("%b %d, %Y") %><br>
                <span class="text-xs text-gray-400"><%= event.occurred_at.strftime("%I:%M %p") %></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "View", admin_message_event_path(event), class: "text-primary-600 hover:text-primary-700" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <!-- Pagination -->
    <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
      <%= paginate @events if respond_to?(:paginate) %>
    </div>
  <% else %>
    <div class="px-6 py-12 text-center">
      <div class="icon icon-activity text-gray-400 mx-auto mb-4" style="font-size: 3rem;"></div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No webhook events found</h3>
      <p class="text-gray-500">Webhook events will appear here as messages are processed.</p>
    </div>
  <% end %>
</div>
