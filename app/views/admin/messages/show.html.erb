<% content_for :title, "Message Details" %>

<div class="admin-content">
  <div class="admin-header">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="admin-title">Message Details</h1>
        <p class="admin-subtitle">
          <span class="badge badge-<%= @message.status == 'delivered' ? 'success' : @message.status == 'failed' ? 'danger' : @message.status == 'sent' ? 'primary' : 'warning' %>">
            <%= @message.display_status %>
          </span>
          <span class="text-gray-500 ml-2">
            Sent via <%= @message.channel.humanize %> â€¢ 
            <%= @message.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </span>
        </p>
      </div>
      <div class="flex space-x-3">
        <%= link_to admin_messages_path, class: "btn btn-secondary" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Messages
        <% end %>
        
        <%= link_to admin_schedule_path(@message.schedule), class: "btn btn-primary" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 4v10m6-10v10m-9 4h12a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v16a2 2 0 002 2z"/>
          </svg>
          View Campaign
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Message Information -->
      <div class="card">
        <div class="card-header">
          <h3 class="text-lg font-semibold">Message Information</h3>
        </div>
        <div class="card-body">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h4 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Recipient</h4>
              <div class="space-y-1">
                <p class="text-lg font-semibold"><%= @message.contact.display_name %></p>
                <p class="text-gray-600"><%= @message.contact.email %></p>
                <% if @message.contact.mobile_number.present? %>
                  <p class="text-gray-600"><%= @message.contact.mobile_number %></p>
                <% end %>
              </div>
            </div>
            
            <div>
              <h4 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Campaign</h4>
              <div class="space-y-1">
                <p class="text-lg font-semibold"><%= @message.schedule.name %></p>
                <p class="text-gray-600">
                  <span class="inline-flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2h4a1 1 0 110 2h-1v12a2 2 0 01-2 2H6a2 2 0 01-2-2V6H3a1 1 0 110-2h4z"/>
                    </svg>
                    <%= @message.schedule.template&.name || 'No Template' %>
                  </span>
                </p>
              </div>
            </div>
          </div>
          
          <div class="border-t pt-6 mt-6">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
              <div class="text-center">
                <p class="text-2xl font-bold text-gray-900"><%= @message.channel.humanize %></p>
                <p class="text-sm text-gray-500">Channel</p>
              </div>
              
              <div class="text-center">
                <p class="text-2xl font-bold text-gray-900"><%= @message.attempts %></p>
                <p class="text-sm text-gray-500">Attempts</p>
              </div>
              
              <div class="text-center">
                <p class="text-2xl font-bold text-gray-900">
                  <%= @message.provider.name %>
                </p>
                <p class="text-sm text-gray-500">Provider</p>
              </div>
              
              <div class="text-center">
                <p class="text-2xl font-bold <%= @message.status == 'failed' ? 'text-red-600' : 'text-green-600' %>">
                  <%= @message.display_status %>
                </p>
                <p class="text-sm text-gray-500">Status</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Message Timeline/Events -->
      <div class="card">
        <div class="card-header">
          <h3 class="text-lg font-semibold">Message Timeline</h3>
        </div>
        <div class="card-body">
          <% if @events.any? %>
            <div class="flow-root">
              <ul role="list" class="-mb-8">
                <% @events.each_with_index do |event, index| %>
                  <li>
                    <div class="relative pb-8">
                      <% unless index == @events.length - 1 %>
                        <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                      <% end %>
                      <div class="relative flex space-x-3">
                        <div>
                          <span class="h-8 w-8 rounded-full flex items-center justify-center ring-8 ring-white
                            <%= case event.event_type
                                when 'delivered' then 'bg-green-500'
                                when 'opened' then 'bg-blue-500'
                                when 'clicked' then 'bg-purple-500'
                                when 'bounced', 'failed', 'rejected' then 'bg-red-500'
                                when 'spam' then 'bg-orange-500'
                                else 'bg-gray-500'
                                end %>">
                            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                              <% case event.event_type %>
                              <% when 'delivered' %>
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                              <% when 'opened' %>
                                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                              <% when 'clicked' %>
                                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                              <% else %>
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                              <% end %>
                            </svg>
                          </span>
                        </div>
                        <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                          <div>
                            <p class="text-sm text-gray-500">
                              <span class="font-medium text-gray-900"><%= event.display_type %></span>
                              <% if event.description.present? %>
                                <br><span class="text-xs"><%= event.description %></span>
                              <% end %>
                            </p>
                          </div>
                          <div class="text-right text-sm whitespace-nowrap text-gray-500">
                            <%= event.occurred_at&.strftime("%m/%d/%Y %I:%M %p") %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          <% else %>
            <div class="text-center py-6">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No events yet</h3>
              <p class="mt-1 text-sm text-gray-500">
                Message events will appear here once they occur.
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Technical Details -->
      <div class="card">
        <div class="card-header">
          <h3 class="text-lg font-semibold">Technical Details</h3>
        </div>
        <div class="card-body space-y-4">
          <div>
            <h4 class="text-sm font-medium text-gray-500">Message ID</h4>
            <p class="text-sm font-mono bg-gray-50 px-2 py-1 rounded"><%= @message.id %></p>
          </div>
          
          <% if @message.provider_message_id.present? %>
            <div>
              <h4 class="text-sm font-medium text-gray-500">Provider Message ID</h4>
              <p class="text-sm font-mono bg-gray-50 px-2 py-1 rounded"><%= @message.provider_message_id %></p>
            </div>
          <% end %>
          
          <div>
            <h4 class="text-sm font-medium text-gray-500">Created</h4>
            <p class="text-sm"><%= @message.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
          
          <% if @message.sent_at.present? %>
            <div>
              <h4 class="text-sm font-medium text-gray-500">Sent</h4>
              <p class="text-sm"><%= @message.sent_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
          <% end %>
          
          <% if @message.last_error.present? %>
            <div>
              <h4 class="text-sm font-medium text-red-600">Last Error</h4>
              <p class="text-sm text-red-600 bg-red-50 px-2 py-1 rounded"><%= @message.last_error %></p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card">
        <div class="card-header">
          <h3 class="text-lg font-semibold">Quick Actions</h3>
        </div>
        <div class="card-body space-y-3">
          <%= link_to admin_contact_path(@message.contact), class: "btn btn-secondary w-full" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            View Contact
          <% end %>
          
          <%= link_to admin_schedule_path(@message.schedule), class: "btn btn-secondary w-full" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 4v10m6-10v10m-9 4h12a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v16a2 2 0 002 2z"/>
            </svg>
            View Campaign
          <% end %>
          
          <% if @message.schedule.template %>
            <%= link_to admin_template_path(@message.schedule.template), class: "btn btn-secondary w-full" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              View Template
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
