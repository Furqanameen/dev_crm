<div class="min-h-screen bg-gray-50">
  <div class="flex">
    <!-- Sidebar -->
    <div class="bg-blue-900 text-white w-64 min-h-screen">
      <div class="p-6">
        <div class="flex items-center mb-8">
          <div class="bg-blue-700 p-2 rounded-lg mr-3">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
            </svg>
          </div>
          <h2 class="text-xl font-bold">DevCRM Admin</h2>
        </div>
        
        <nav>
          <ul class="space-y-1">
            <li>
              <%= link_to admin_root_path, class: "flex items-center px-4 py-3 text-sm rounded-lg hover:bg-blue-800 transition-colors" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
                </svg>
                Dashboard
              <% end %>
            </li>
            
            <li class="mt-6">
              <div class="px-4 py-2 text-xs font-semibold text-blue-300 uppercase tracking-wide">Campaigns</div>
            </li>
            <li>
              <%= link_to admin_providers_path, class: "flex items-center px-4 py-3 text-sm rounded-lg hover:bg-blue-800 transition-colors" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"/>
                </svg>
                Providers
              <% end %>
            </li>
            <li>
              <%= link_to admin_templates_path, class: "flex items-center px-4 py-3 text-sm rounded-lg hover:bg-blue-800 transition-colors" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Templates
              <% end %>
            </li>
            <li>
              <%= link_to admin_schedules_path, class: "flex items-center px-4 py-3 text-sm rounded-lg bg-blue-800 font-medium transition-colors" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2-2v16a2 2 0 002 2z"/>
                </svg>
                Schedules
              <% end %>
            </li>
            
            <li class="mt-6">
              <div class="px-4 py-2 text-xs font-semibold text-blue-300 uppercase tracking-wide">Logs & Events</div>
            </li>
            <li>
              <%= link_to admin_messages_path, class: "flex items-center px-4 py-3 text-sm rounded-lg hover:bg-blue-800 transition-colors" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
                Messages
              <% end %>
            </li>
            <li>
              <%= link_to admin_message_events_path, class: "flex items-center px-4 py-3 text-sm rounded-lg hover:bg-blue-800 transition-colors" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
                Webhooks
              <% end %>
            </li>
          </ul>
        </nav>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col">
      <!-- Top Header -->
      <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="px-6 py-4">
          <div class="flex items-center justify-between">
            <div>
              <h1 class="text-2xl font-bold text-gray-900">Campaign Schedules</h1>
              <p class="text-gray-600 text-sm mt-1">Manage scheduled campaigns and their execution</p>
            </div>
            <%= link_to new_admin_schedule_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors shadow-sm" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              New Schedule
            <% end %>
          </div>
        </div>
      </header>

      <!-- Content Area -->
      <main class="flex-1 p-6">
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
              <div class="p-3 bg-blue-50 rounded-lg">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2-2v16a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Total Schedules</p>
                <p class="text-2xl font-bold text-gray-900"><%= Schedule.count %></p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
              <div class="p-3 bg-green-50 rounded-lg">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Completed</p>
                <p class="text-2xl font-bold text-gray-900"><%= Schedule.where(state: 'completed').count %></p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
              <div class="p-3 bg-yellow-50 rounded-lg">
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Pending</p>
                <p class="text-2xl font-bold text-gray-900"><%= Schedule.where(state: 'pending').count %></p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
              <div class="p-3 bg-red-50 rounded-lg">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Failed</p>
                <p class="text-2xl font-bold text-gray-900"><%= Schedule.where(state: 'failed').count %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Filters -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-8">
          <%= form_with url: admin_schedules_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
            <div class="min-w-0 flex-1 max-w-xs">
              <%= form.label :state, "State", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.select :state, 
                  options_for_select([['All States', '']] + @states.map { |s| [s.humanize, s] }, params[:state]), 
                  {}, 
                  { class: "block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
            </div>

            <div class="min-w-0 flex-1 max-w-xs">
              <%= form.label :template_id, "Template", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.select :template_id, 
                  options_for_select([['All Templates', '']] + @templates, params[:template_id]), 
                  {}, 
                  { class: "block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
            </div>

            <div class="min-w-0 flex-1 max-w-xs">
              <%= form.label :provider_id, "Provider", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.select :provider_id, 
                  options_for_select([['All Providers', '']] + @providers, params[:provider_id]), 
                  {}, 
                  { class: "block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
            </div>

            <div class="flex gap-3">
              <%= form.submit "Filter", class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors shadow-sm" %>
              <%= link_to "Clear", admin_schedules_path, class: "inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 text-sm font-medium rounded-lg transition-colors" %>
            </div>
          <% end %>
        </div>

        <!-- Schedules Table -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <% if @schedules.any? %>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Schedule</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Template</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Provider</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Target</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">State</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Send At</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Actions</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @schedules.each do |schedule| %>
                    <tr class="hover:bg-gray-50 transition-colors">
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                          <div class="p-2 bg-blue-50 rounded-lg mr-3">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2-2v16a2 2 0 002 2z"/>
                            </svg>
                          </div>
                          <div>
                            <div class="text-sm font-semibold text-gray-900"><%= schedule.name %></div>
                            <div class="text-xs text-gray-500">ID: <%= schedule.id %></div>
                          </div>
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900 font-medium"><%= schedule.template&.name %></div>
                        <div class="text-xs text-gray-500"><%= schedule.template&.template_type&.humanize %></div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900 font-medium"><%= schedule.provider&.name %></div>
                        <div class="text-xs text-gray-500 capitalize"><%= schedule.provider&.channel&.humanize %></div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">
                          <%= schedule.target_type %>
                          <% if schedule.target.respond_to?(:name) %>
                            (<%= schedule.target.name %>)
                          <% end %>
                        </div>
                        <div class="text-xs text-gray-500">ID: <%= schedule.target_id %></div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                          <%= case schedule.state
                              when 'pending' then 'bg-yellow-100 text-yellow-800'
                              when 'processing' then 'bg-blue-100 text-blue-800'
                              when 'completed' then 'bg-green-100 text-green-800'
                              when 'failed' then 'bg-red-100 text-red-800'
                              when 'paused' then 'bg-gray-100 text-gray-800'
                              when 'sending' then 'bg-purple-100 text-purple-800'
                              else 'bg-gray-100 text-gray-800'
                              end %>">
                          <%= schedule.state.humanize %>
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <% if schedule.send_at %>
                          <div class="font-medium"><%= schedule.send_at.strftime("%b %d, %Y") %></div>
                          <div class="text-xs text-gray-500"><%= schedule.send_at.strftime("%H:%M %Z") %></div>
                        <% else %>
                          <span class="text-gray-400">Immediate</span>
                        <% end %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <div class="flex items-center space-x-3">
                          <%= link_to admin_schedule_path(schedule), class: "text-blue-600 hover:text-blue-800 transition-colors" do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                          <% end %>
                          <%= link_to edit_admin_schedule_path(schedule), class: "text-gray-600 hover:text-gray-800 transition-colors" do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                          <% end %>
                          <%= link_to admin_schedule_path(schedule), method: :delete, 
                                    class: "text-red-600 hover:text-red-800 transition-colors",
                                    data: { confirm: "Are you sure you want to delete this schedule?" } do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-16">
              <div class="p-4 bg-gray-50 rounded-full w-20 h-20 mx-auto mb-6 flex items-center justify-center">
                <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2-2v16a2 2 0 002 2z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">No schedules found</h3>
              <p class="text-gray-500 mb-6">Get started by creating a new campaign schedule.</p>
              <%= link_to new_admin_schedule_path, class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors shadow-sm" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Create Your First Schedule
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <% if respond_to?(:paginate) && @schedules.respond_to?(:current_page) %>
          <div class="mt-8 flex justify-center">
            <%= paginate @schedules %>
          </div>
        <% end %>
      </main>
    </div>
  </div>
</div>
