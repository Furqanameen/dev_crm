<% content_for :title, @template.name %>

<div class="admin-content">
  <div class="admin-header">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="admin-title"><%= @template.name %></h1>
        <p class="admin-subtitle">
          <span class="badge badge-primary"><%= @template.purpose.humanize %></span>
          <span class="text-gray-500 ml-2">Provider: <%= @template.default_provider %></span>
        </p>
      </div>
      <div class="flex space-x-3">
        <%= link_to admin_templates_path, class: "btn btn-secondary" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Templates
        <% end %>
        <%= link_to edit_admin_template_path(@template), class: "btn btn-primary" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit Template
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Template Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Basic Information -->
      <div class="card">
        <div class="card-header">
          <h3 class="text-lg font-semibold">Template Information</h3>
        </div>
        <div class="card-body">
          <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Name</dt>
              <dd class="text-sm text-gray-900"><%= @template.name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Purpose</dt>
              <dd class="text-sm text-gray-900"><%= @template.purpose.humanize %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Default Provider</dt>
              <dd class="text-sm text-gray-900"><%= @template.default_provider %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">External Template ID</dt>
              <dd class="text-sm text-gray-900"><%= @template.external_template_id.presence || 'Not set' %></dd>
            </div>
            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Description</dt>
              <dd class="text-sm text-gray-900"><%#= @template&.description.presence || 'No description provided' %></dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Content Preview -->
      <div class="card">
        <div class="card-header">
          <h3 class="text-lg font-semibold">Content Preview</h3>
        </div>
        <div class="card-body">
          <% if @template.subject.present? %>
            <div class="mb-4">
              <h4 class="text-sm font-medium text-gray-500 mb-1">Subject(Email Heading)</h4>
              <p class="text-sm text-gray-900 bg-gray-50 p-2 rounded"><%= @template.subject %></p>
            </div>
          <% end %>
          
          <% if @template.meta['preheader_text'].present? %>
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Preheader Text</dt>
              <p class="text-sm text-gray-900 bg-gray-50 p-2 rounded"><%= @template.meta['preheader_text'] %></p>
            </div>
          <% end %>          <div class="space-y-4">
            <% if @template.html_body.present? %>
              <div class="border rounded">
                <div class="bg-gray-50 px-3 py-2 border-b">
                  <h4 class="text-sm font-medium text-gray-700">HTML Preview</h4>
                </div>
                <div class="p-3">
                  <iframe srcdoc="<%= html_escape(@template.html_body) %>" class="w-full h-48 border-0"></iframe>
                </div>
              </div>
            <% end %>            <% if @template.text_body.present? && @template.meta['channel'] != 'sms' %>
              <div>
                <h4 class="text-sm font-medium text-gray-500 mb-2">Text Content</h4>
                <pre class="text-sm text-gray-900 bg-gray-50 p-4 rounded max-h-48 overflow-y-auto whitespace-pre-wrap"><%= @template.text_body %></pre>
              </div>
            <% end %>

            <% if @template.text_body.present? && @template.meta['channel'] == 'sms' %>
              <div>
                <h4 class="text-sm font-medium text-gray-500 mb-2">SMS Content</h4>
                <p class="text-sm text-gray-900 bg-gray-50 p-4 rounded"><%= @template.text_body %></p>
                <p class="text-xs text-gray-500 mt-1">Character count: <%= @template.text_body.length %></p>
              </div>
            <% end %>

            <% if @template.html_body.blank? && @template.text_body.blank? %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No content</h3>
                <p class="mt-1 text-sm text-gray-500">This template doesn't have any content yet.</p>
                <%= link_to "Add content", edit_admin_template_path(@template), class: "mt-2 btn btn-primary btn-sm" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Usage Statistics -->
      <div class="card">
        <div class="card-header">
          <h3 class="text-lg font-semibold">Usage Statistics</h3>
        </div>
        <div class="card-body">
          <dl class="space-y-3">
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Total Schedules</dt>
              <dd class="text-sm text-gray-900"><%= @stats[:total_schedules] %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Active Schedules</dt>
              <dd class="text-sm text-gray-900"><%= @stats[:active_schedules] %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Completed</dt>
              <dd class="text-sm text-gray-900"><%= @stats[:completed_schedules] %></dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Recent Schedules -->
      <div class="card">
        <div class="card-header">
          <h3 class="text-lg font-semibold">Recent Schedules</h3>
        </div>
        <div class="card-body">
          <% if @recent_schedules.any? %>
            <div class="space-y-3">
              <% @recent_schedules.each do |schedule| %>
                <div class="border-b border-gray-100 pb-2 last:border-b-0">
                  <%= link_to admin_schedule_path(schedule), class: "block hover:bg-gray-50 -m-2 p-2 rounded" do %>
                    <div class="flex justify-between items-start">
                      <div>
                        <p class="text-sm font-medium text-gray-900"><%= schedule.name %></p>
                        <p class="text-xs text-gray-500">
                          <span class="badge badge-<%= schedule.state == 'completed' ? 'success' : schedule.state == 'failed' ? 'danger' : 'primary' %> badge-sm">
                            <%= schedule.state.humanize %>
                          </span>
                        </p>
                      </div>
                      <p class="text-xs text-gray-500"><%= time_ago_in_words(schedule.created_at) %> ago</p>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
            <div class="mt-4">
              <%= link_to "View all schedules", admin_schedules_path(template_id: @template.id), class: "btn btn-sm btn-secondary w-full" %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <p class="text-sm text-gray-500">No schedules created yet</p>
              <%= link_to "Create Schedule", new_admin_schedule_path(template_id: @template.id), class: "mt-2 btn btn-primary btn-sm" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Actions -->
      <div class="card">
        <div class="card-header">
          <h3 class="text-lg font-semibold">Actions</h3>
        </div>
        <div class="card-body space-y-3">
          <%= link_to new_admin_schedule_path(template_id: @template.id), class: "btn btn-primary w-full" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Create Schedule
          <% end %>
          
          <%= link_to edit_admin_template_path(@template), class: "btn btn-secondary w-full" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit Template
          <% end %>
          
          <%= link_to admin_template_path(@template), method: :delete, 
              confirm: "Are you sure you want to delete this template? This action cannot be undone.", 
              class: "btn btn-danger w-full" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Delete Template
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
