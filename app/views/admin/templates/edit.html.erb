<% content_for :title, "Edit #{@template.name}" %>

<div class="admin-content">
  <div class="admin-header">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="admin-title">Edit Template</h1>
        <p class="admin-subtitle">Modify your <%= @template.purpose.humanize.downcase %> template</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to admin_template_path(@template), class: "btn btn-secondary" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Template
        <% end %>
      </div>
    </div>
  </div>

  <div class="card">
    <%= form_with model: [:admin, @template], local: true, class: "space-y-6" do |form| %>
      <% if @template.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@template.errors.count, "error") %> prohibited this template from being saved:</h4>
          <ul class="mt-2">
            <% @template.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Basic Information -->
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2">Basic Information</h3>
          
          <div class="form-group">
            <%= form.label :name, class: "form-label" %>
            <%= form.text_field :name, class: "form-control", placeholder: "e.g., Welcome Email Template" %>
          </div>

          <div class="form-group">
            <%= form.label :purpose, class: "form-label" %>
            <%= form.select :purpose, 
                options_for_select(::Template.purposes.map { |key, value| [key.humanize, key] }, @template.purpose),
                { prompt: "Select template purpose" },
                { class: "form-control" } %>
          </div>

          <div class="form-group">
            <%= form.label :default_provider, "Default Provider", class: "form-label" %>
            <% if @providers.any? %>
              <%= form.select :default_provider, 
                  grouped_options_for_select(
                    @providers.map { |channel, providers| 
                      [channel.humanize, providers.map { |p| [p.name, p.name] }] 
                    }, @template.default_provider
                  ),
                  { prompt: "Select default provider" },
                  { class: "form-control" } %>
            <% else %>
              <p class="text-sm text-gray-500">No providers available. <%= link_to "Create a provider", admin_providers_path, class: "text-blue-600 hover:text-blue-800" %> first.</p>
            <% end %>
          </div>
        </div>

        <!-- Provider Integration -->
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2">Provider Integration</h3>
          
          <div class="form-group">
            <%= form.label :external_template_id, "External Template ID", class: "form-label" %>
            <%= form.text_field :external_template_id, class: "form-control", placeholder: "Provider-specific template ID (optional)" %>
            <p class="form-help">If this template is hosted by your provider (e.g., Mailgun, SendGrid), enter the template ID</p>
          </div>

          <div class="form-group">
            <%= form.label 'meta[description]', "Description", class: "form-label" %>
            <%= form.text_area 'meta[description]', rows: 3, value: @template.meta['description'], class: "form-control", placeholder: "Brief description of this template's purpose" %>
          </div>
        </div>
      </div>

      <!-- Content Section -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2">Template Content</h3>
        <p class="text-sm text-gray-600">Provide at least one form of content (HTML, plain text, or use external template)</p>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <div class="form-group">
            <%= form.label :subject, class: "form-label" %>
            <%= form.text_field :subject, class: "form-control", placeholder: "Email subject line" %>
          </div>

          <div class="form-group">
            <%= form.label 'meta[preheader_text]', "Preheader Text", class: "form-label" %>
            <%= form.text_field 'meta[preheader_text]', value: @template.meta['preheader_text'], class: "form-control", placeholder: "Email preheader text (optional)" %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :html_body, "HTML Content", class: "form-label" %>
          <%= form.text_area :html_body, rows: 8, class: "form-control", placeholder: "HTML version of your email template" %>
          <% if @template.html_body.present? %>
            <div class="mt-2">
              <details class="text-sm">
                <summary class="cursor-pointer text-blue-600 hover:text-blue-800">Preview HTML Content</summary>
                <div class="mt-2 border border-gray-200 rounded p-2">
                  <iframe srcdoc="<%= html_escape(@template.html_body) %>" class="w-full h-48 border-0"></iframe>
                </div>
              </details>
            </div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :text_body, "Text Content", class: "form-label" %>
          <%= form.text_area :text_body, rows: 6, class: "form-control", placeholder: "Plain text version of your template (used for email text and SMS)" %>
          <p class="form-help">This content will be used for both plain text emails and SMS messages.</p>
          <% if @template.text_body.present? %>
            <p class="text-sm text-gray-500 mt-1">Current character count: <span class="font-medium"><%= @template.text_body.length %></span></p>
          <% end %>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex justify-between pt-6 border-t border-gray-200">
        <div>
          <%= link_to admin_template_path(@template), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this template? This action cannot be undone."  }, 
              class: "btn btn-danger" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Delete Template
          <% end %>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Cancel", admin_template_path(@template), class: "btn btn-secondary" %>
          <%= form.submit "Update Template", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
