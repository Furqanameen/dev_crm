<% content_for :page_title, "User Details" %>

<div class="admin-header">
  <div>
    <h1 class="admin-title">User Details</h1>
    <p class="admin-subtitle"><%= @user.email %></p>
  </div>
  <div class="admin-actions">
    <%= link_to "Edit User", edit_admin_user_path(@user), class: "btn btn-primary" %>
    <%= link_to "Back to Users", admin_users_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- User Information -->
  <div class="lg:col-span-2">
    <div class="card">
      <div class="card-header">
        <h3 class="text-lg font-semibold">User Information</h3>
      </div>
      <div class="card-body">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="form-label">Email</label>
            <p class="text-gray-900"><%= @user.email %></p>
          </div>
          <div>
            <label class="form-label">Display Name</label>
            <p class="text-gray-900"><%= @user.display_name %></p>
          </div>
          <div>
            <label class="form-label">Role</label>
            <p class="text-gray-900">
              <span class="badge <%= @user.admin? ? 'badge-primary' : 'badge-secondary' %>">
                <%= @user.role.humanize %>
              </span>
            </p>
          </div>
          <div>
            <label class="form-label">Status</label>
            <p class="text-gray-900">
              <% if @user.confirmed_at %>
                <span class="badge badge-success">Confirmed</span>
              <% else %>
                <span class="badge badge-warning">Pending Confirmation</span>
              <% end %>
            </p>
          </div>
          <div>
            <label class="form-label">Member Since</label>
            <p class="text-gray-900"><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
          <div>
            <label class="form-label">Last Sign In</label>
            <p class="text-gray-900">
              <%= @user.last_sign_in_at ? @user.last_sign_in_at.strftime("%B %d, %Y at %I:%M %p") : "Never" %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Import Batches -->
    <div class="card mt-6">
      <div class="card-header">
        <h3 class="text-lg font-semibold">Recent Import Batches</h3>
      </div>
      <div class="card-body">
        <% if @import_batches.any? %>
          <div class="space-y-3">
            <% @import_batches.each do |batch| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div>
                  <p class="font-medium text-gray-900"><%= batch.original_filename %></p>
                  <p class="text-sm text-gray-600">
                    <%= batch.created_at.strftime("%b %d, %Y") %> â€¢
                    <%= batch.total_rows || 0 %> rows
                  </p>
                </div>
                <div>
                  <span class="badge badge-<%= batch.status == 'completed' ? 'success' : batch.status == 'failed' ? 'danger' : 'warning' %>">
                    <%= batch.status.humanize %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
          <div class="mt-4">
            <%= link_to "View All Imports", admin_imports_path(user: @user), class: "btn btn-outline" %>
          </div>
        <% else %>
          <p class="text-gray-600">No import batches found.</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="lg:col-span-1">
    <div class="card">
      <div class="card-header">
        <h3 class="text-lg font-semibold">Quick Actions</h3>
      </div>
      <div class="card-body">
        <div class="space-y-3">
          <%= link_to edit_admin_user_path(@user), class: "flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
            <div class="icon icon-edit text-gray-600 mr-3"></div>
            <div>
              <p class="font-medium text-gray-900">Edit Profile</p>
              <p class="text-sm text-gray-600">Update user information</p>
            </div>
          <% end %>
          
          <% unless @user.confirmed_at %>
            <%= link_to invite_admin_user_path(@user), method: :post, class: "flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
              <div class="icon icon-envelope text-gray-600 mr-3"></div>
              <div>
                <p class="font-medium text-gray-900">Send Invitation</p>
                <p class="text-sm text-gray-600">Resend confirmation email</p>
              </div>
            <% end %>
          <% end %>
          
          <% unless @user == current_user %>
            <%= link_to admin_user_path(@user), method: :delete, 
                data: { confirm: "Are you sure you want to delete this user? This action cannot be undone." },
                class: "flex items-center p-3 bg-red-50 rounded-lg hover:bg-red-100 transition-colors" do %>
              <div class="icon icon-trash text-red-600 mr-3"></div>
              <div>
                <p class="font-medium text-red-900">Delete User</p>
                <p class="text-sm text-red-600">Permanently remove user</p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Statistics -->
    <div class="card mt-6">
      <div class="card-header">
        <h3 class="text-lg font-semibold">Statistics</h3>
      </div>
      <div class="card-body">
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-600">Total Imports</span>
            <span class="font-medium"><%= @user.import_batches.count %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Successful Imports</span>
            <span class="font-medium"><%= @user.import_batches.where(status: 'completed').count %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Failed Imports</span>
            <span class="font-medium"><%= @user.import_batches.where(status: 'failed').count %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Sign In Count</span>
            <span class="font-medium"><%= @user.sign_in_count || 0 %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
