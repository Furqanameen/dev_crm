<% content_for :page_title, "Contact Details" %>

<div class="admin-header">
  <div>
    <h1 class="admin-title">Contact Details</h1>
    <p class="admin-subtitle">
      <%= @contact.full_name.presence || @contact.company_name %>
    </p>
  </div>
  <div class="admin-actions">
    <%= link_to "Edit Contact", edit_admin_contact_path(@contact), class: "btn btn-primary" %>
    <%= link_to "Back to Contacts", admin_contacts_path, class: "btn btn-secondary" %>
    <%= link_to "Delete", admin_contact_path(@contact), data: { turbo_method: :delete }, 
        class: "btn btn-danger", 
        data: { confirm: "Are you sure you want to delete this contact?" } %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Contact Information -->
  <div class="lg:col-span-2">
    <div class="card">
      <div class="card-header">
        <h3 class="text-lg font-semibold">Contact Information</h3>
      </div>
      <div class="card-body">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="form-label">Account Type</label>
            <p class="text-gray-900">
              <span class="badge badge-<%= @contact.individual? ? 'primary' : 'secondary' %>">
                <%= @contact.account_type.humanize %>
              </span>
            </p>
          </div>

          <% if @contact.individual? %>
            <div>
              <label class="form-label">Full Name</label>
              <p class="text-gray-900"><%= @contact.full_name %></p>
            </div>
          <% else %>
            <div>
              <label class="form-label">Company Name</label>
              <p class="text-gray-900"><%= @contact.company_name %></p>
            </div>
            <% if @contact.full_name.present? %>
              <div>
                <label class="form-label">Contact Person</label>
                <p class="text-gray-900"><%= @contact.full_name %></p>
              </div>
            <% end %>
          <% end %>

          <div>
            <label class="form-label">Email</label>
            <p class="text-gray-900">
              <% if @contact.email.present? %>
                <a href="mailto:<%= @contact.email %>" class="text-primary-600 hover:text-primary-700">
                  <%= @contact.email %>
                </a>
              <% else %>
                <span class="text-gray-500">Not provided</span>
              <% end %>
            </p>
          </div>

          <div>
            <label class="form-label">Mobile Number</label>
            <p class="text-gray-900">
              <% if @contact.mobile_number.present? %>
                <a href="tel:<%= @contact.mobile_number %>" class="text-primary-600 hover:text-primary-700">
                  <%= @contact.mobile_number %>
                </a>
              <% else %>
                <span class="text-gray-500">Not provided</span>
              <% end %>
            </p>
          </div>

          <div>
            <label class="form-label">Consent Status</label>
            <p class="text-gray-900">
              <span class="badge badge-<%= 
                case @contact.consent_status
                when 'consented' then 'success'
                when 'unsubscribed' then 'danger'
                else 'warning'
                end
              %>">
                <%= @contact.consent_status.humanize %>
              </span>
            </p>
          </div>

          <div>
            <label class="form-label">Bounced Status</label>
            <p class="text-gray-900">
              <% if @contact.bounced? %>
                <span class="badge badge-danger">Bounced</span>
              <% else %>
                <span class="badge badge-success">Active</span>
              <% end %>
            </p>
          </div>

          <div>
            <label class="form-label">Created</label>
            <p class="text-gray-900"><%= @contact.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>

          <div>
            <label class="form-label">Last Updated</label>
            <p class="text-gray-900"><%= @contact.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
        </div>

        <% if @contact.tags.present? %>
          <div class="mt-6">
            <label class="form-label">Tags</label>
            <div class="flex flex-wrap gap-2 mt-2">
              <% @contact.tags.each do |tag| %>
                <span class="badge badge-secondary"><%= tag %></span>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if @contact&.notes.present? %>
          <div class="mt-6">
            <label class="form-label">Notes</label>
            <div class="mt-2 p-3 bg-gray-50 rounded-lg">
              <p class="text-gray-900 whitespace-pre-wrap"><%= @contact&.notes %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="lg:col-span-1">
    <div class="card">
      <div class="card-header">
        <h3 class="text-lg font-semibold">Quick Actions</h3>
      </div>
      <div class="card-body">
        <div class="space-y-3">
          <%= link_to edit_admin_contact_path(@contact), class: "flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
            <div class="icon icon-edit text-gray-600 mr-3"></div>
            <div>
              <p class="font-medium text-gray-900">Edit Contact</p>
              <p class="text-sm text-gray-600">Update contact information</p>
            </div>
          <% end %>

          <% if @contact.email.present? %>
            <a href="mailto:<%= @contact.email %>" class="flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
              <div class="icon icon-envelope text-gray-600 mr-3"></div>
              <div>
                <p class="font-medium text-gray-900">Send Email</p>
                <p class="text-sm text-gray-600">Open email client</p>
              </div>
            </a>
          <% end %>

          <% if @contact.mobile_number.present? %>
            <a href="tel:<%= @contact.mobile_number %>" class="flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
              <div class="icon icon-phone text-gray-600 mr-3"></div>
              <div>
                <p class="font-medium text-gray-900">Call Contact</p>
                <p class="text-sm text-gray-600">Start phone call</p>
              </div>
            </a>
          <% end %>

          <%= link_to admin_contact_path(@contact), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this contact? This action cannot be undone."  },
              class: "flex items-center p-3 bg-red-50 rounded-lg hover:bg-red-100 transition-colors" do %>
            <div class="icon icon-trash text-red-600 mr-3"></div>
            <div>
              <p class="font-medium text-red-900">Delete Contact</p>
              <p class="text-sm text-red-600">Permanently remove contact</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Statistics -->
    <div class="card mt-6">
      <div class="card-header">
        <h3 class="text-lg font-semibold">Contact Statistics</h3>
      </div>
      <div class="card-body">
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-600">Account Type</span>
            <span class="font-medium"><%= @contact.account_type.humanize %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Contact Methods</span>
            <span class="font-medium">
              <%= [@contact.email.present?, @contact.mobile_number.present?].count(true) %> / 2
            </span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Tags Count</span>
            <span class="font-medium"><%= @contact.tags.size %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Status</span>
            <span class="font-medium">
              <%= @contact.bounced? ? 'Bounced' : 'Active' %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
